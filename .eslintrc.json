{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["dist/*.js"],
    "rules": {
        "max-len": ["error", {
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignorePattern": "^\\s*<.*>\\s*$"
        }],
        "linebreak-style": [0, "error", "windows"],
        "indent": ["error", 2]
    }
}
